# Example .env for running the code in `examples/Vodakom/code/`
# Copy to `.env` before running the example and fill in values.

# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Path to the context file (relative to this .env location). The default
# example context is in `examples/Vodakom/context.txt`, so we point one
# level up:
LLM_CONTEXT_FILE=../context.txt

# Optional: maximum number of characters to read from the context file
# (prevents huge prompt sizes)
LLM_CONTEXT_MAX_CHARS=2000
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DB_PATH=learnium.db

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Set custom log file location
# LOG_FILE=nl2sql_agent.log
